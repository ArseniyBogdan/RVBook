<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/root_element_Periods"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400sp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FrameLayout_Periods">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@color/SETTINGS_WINDOW_TOP">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:text="Временные периоды"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@android:color/black" />
            </FrameLayout>
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:saveEnabled="false"
                android:id="@+id/AppBar_Periods"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/DARK_PRIMARY_COLOR"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@android:style/Widget.Holo.PopupMenu"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_cancel_white"
                            android:id="@+id/cancel_icon_Delete_Periods"
                            android:background="?android:selectableItemBackground"
                            android:focusable="true" />

                        <TextView
                            android:layout_width="205sp"
                            android:layout_height="match_parent"
                            android:text="Выбран 1 ученик"
                            android:layout_marginStart="40sp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:id="@+id/selected_Periods"/>

                        <ImageView
                            android:layout_gravity="end"
                            android:layout_marginEnd="10sp"
                            android:clickable="true"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_delete_white"
                            android:id="@+id/delete_icon_Periods"
                            android:background="?android:selectableItemBackground"
                            android:focusable="true" />
                    </FrameLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/SCHEDULE_FRAGMENT2"
            android:orientation="horizontal"
            android:layout_marginTop="55sp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="98sp"
                android:background="@drawable/cell_shape_fragment2"
                android:padding="15sp"
                android:text="Период"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/cell_shape_fragment2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Дата"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60sp"
            android:layout_marginTop="115sp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Periods_List"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_Periods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340sp"
            android:background="@color/SETTINGS_WINDOW_TOP"
            android:padding="5sp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/button_cancel_statistics"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="Закрыть"
                android:textColor="@color/PRIMARY_TEXT"
                android:textSize="14sp" />

        </FrameLayout>

</androidx.cardview.widget.CardView>