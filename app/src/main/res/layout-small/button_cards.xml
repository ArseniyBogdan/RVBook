<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/SCHEDULE_DAYS"
            android:minHeight="?attr/actionBarSize"
            android:theme="@android:style/Widget.Holo.PopupMenu">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GroupName"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/groupNameTitle"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                app:cardCornerRadius="6dp"
                android:id="@+id/Students_card"
                android:layout_weight="1"
                android:layout_margin="10sp"
                app:cardElevation="10sp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Students_card_Text"
                        android:ems="10"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        android:gravity="center_horizontal"
                        android:text="Список учеников"
                        android:textSize="14sp"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearLayout_Students"
                        android:orientation="vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                app:cardCornerRadius="6dp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:id="@+id/AddMarks_card"
                app:cardElevation="10sp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/AddMarks_card_Text"
                        android:ems="10"
                        android:inputType="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsbold"
                        android:backgroundTint="@color/black"
                        android:gravity="center_horizontal"
                        android:text="Добавить отметку"
                        android:textSize="14sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearLayout_AddMarks"
                        android:orientation="vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_margin="10sp"
                android:id="@+id/GetMarks_card"
                app:cardElevation="10sp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/GetMarks_card_Text"
                        android:ems="10"
                        android:inputType="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsbold"
                        android:backgroundTint="@color/black"
                        android:gravity="center_horizontal"
                        android:text="Вывести отметки"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearLayout_GetMarks"
                        android:orientation="vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_margin="10sp"
                app:cardElevation="10sp"
                android:id="@+id/GetStudentMarks_card"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/GetStudentMarks_card_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:clickable="true"
                        android:ems="10"
                        android:focusable="false"
                        android:fontFamily="@font/poppinsbold"
                        android:gravity="center_horizontal"
                        android:inputType="none"
                        android:text="Отметки ученика"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>